# Bootstrap{{{
bootstrap="`dirname $0`/.bootstrap"
if [ -f "${bootstrap}" ]; then
    source "${bootstrap}"
else
    echo "Cannot bootstrap"
    exit 54
fi
unset bootstrap
#}}}

need_root

GrubWindowsTitle="windows"
WindowsEntry=false

print_info 0 "Rebooting to Windows"
print_info 1 "Would you like to continue [y/n] : " false
unset answer; read -sn 1 answer; echo
if ! isTrue "${answer}"; then
    exit 0
fi

print_info 1 "Obtaining Windows entry number."

j=0
Found=false
for i in $(grep -i "^title" /boot/grub/menu.lst | grep -v "^[ \t]*#\|^$" | sed -e "s@title[ =\t]*\(.*\)@\1@g" -e "s@[ \t]@_@g"); do
    if echo "${i}" | grep -qi "${GrubWindowsTitle}"; then
        WindowsEntry="${j}"
        Found=true
        break
    fi
    (( j++ ))
done

# If no WindowsEntry then exit with an error
if ! $Found || ! isNumber "${WindowsEntry}"; then
    die "I couldn't find any entry that matches the REGEX 'title.*${GrubWindowsTitle}' case insensitive."
fi

# Replacing the entry in /boot/grub/menu.lst
print_info 1 "Changing default entry number in /boot/grub/menu.lst"
sed -e "s:^default[ \t]*[0-9]*[ \t]*$:default ${WindowsEntry}:g" -i /boot/grub/menu.lst || die "Sed process of menu.lst failed."

# Rebooting...
shutdown -r +1 "Rebooting into windows in 1 minute."
