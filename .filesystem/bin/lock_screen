#!/bin/bash

case `hostname -f` in
  *.roam.*)
    wallpaper="${HOME}/Pictures/Wallpapers/1920x1200/paintings_dark_fantasy_art_digital_artwork_1920x1200_9125.png"
    ;;
  *)
    wallpaper="${HOME}/Pictures/Wallpapers/2560x1600/paintings_dark_fantasy_art_digital_artwork_2560x1600_9125.png"
    ;;
esac

if [[ -z $DISPLAY ]]; then
  export DISPLAY=:0
fi

if [[ -z $USER ]]; then
  export USER=wmn
fi

i3lock -i "${wallpaper}"
