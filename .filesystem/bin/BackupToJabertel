# Bootstrap{{{
bootstrap="`dirname $0`/.bootstrap"
if [ -f "${bootstrap}" ]; then
    source "${bootstrap}"
else
    echo "Cannot bootstrap"
    exit 54
fi
unset bootstrap
#}}}

###
# Functions

function backup_dir()
{
     [[ "${#}" -ne "1" ]] && return 1
     local local_dir="$(cd "${1}" && pwd)"
     local_dir="${local_dir%%/}/"
     local dest_dir="${ROOT_ON_JABERTEL}${local_dir}"
     local rsync_options="--no-t"

     if isTrue "${DEBUG}"; then
         rsync_options="${rsync_options} -v"
     fi

     print_info 2 "Backuping the folder '${local_dir}' to '${dest_dir}'."
     rsync --delete -auze "ssh -l wael -p 22 -i ${ID_RSA}" "${local_dir}" ${rsync_options} "jabertel.fr:${dest_dir}"
     return "${?}"
}

#
###

# We need root!
need_root ${@}

LOCK="/tmp/BackupToJabertel.lock"
ID_RSA="${HOME}/.ssh/id_rsa"
ROOT_ON_JABERTEL="/home/wael/backup-from-nasreddine.com"

if [ "${1}" = "-d" ]; then
    DEBUG=true
else
    DEBUG=false
fi

# Create a lock!
lock_file

print_info 0 "Starting backup to issam's server."

for Folder in '/home/virtual' '/home/svn' '/home/mysql' '/home/wael/.mail' \
              '/home/wael/lighttpd' '/home/hassan/.mail' '/home/bitlbee' \
              '/home/darcs' '/home/ldap' '/home/mailgraph' '/home/namedb-vhosts'
do
    backup_dir "${Folder}" || die "Failed to backup '${Folder}'."
done

print_info 0 "Done."

# Free the lock
free_lock
