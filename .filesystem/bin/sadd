####
# Options

# Change this option to true to enable options parsing
ParseOptions=false

#
####

# Bootstrap{{{
bootstrap="`dirname $0`/.bootstrap"
if [ -f "${bootstrap}" ]; then
    source "${bootstrap}"
else
    echo "Cannot bootstrap"
    exit 54
fi
unset bootstrap
#}}}

####
# Functions

# If you want to define a specific help for this script
#function help()
#{
#    # print_info goes here
#}

# svn_add_recursive#{{{
function svn_add_recursive()
{
    local Entry="${1}"
    local Level="${2}"
    local NextLevel="$(( ${Level} + 1 ))"
    local i
    if [ "${Entry}" = ".svn" ]; then
        return 0
    elif [ -d "${Entry}" ]; then
        # It's a folder.
        print_info "${Level}" "Adding the folder '${Entry}'."
        svn add "${Entry}" &> /dev/null
        cd "${Entry}"
        if [ "`ls -a | wc -l`" -gt "3" ]; then
            for i in *; do
                svn_add_recursive "${i}" "${NextLevel}"
            done
        fi
        cd ..
    else
        # A file or anything else that can be added.
        print_info "${Level}" "Adding the file '${Entry}'."
        svn add "${Entry}" &> /dev/null
        if isTrue "${KEYWORDS}"; then
            if grep -q "^.*\$Id.*\$" "${Entry}"; then
                print_info "${NextLevel}" "Activating svn:keywords on '${Entry}'."
                svn propset svn:keywords "Id" "${Entry}" &> /dev/null
            fi
        fi
    fi
}
#}}}

#
####

####
# Main

# Should we take care of the Id tags?#{{{
if [ "${1}" = "-k" ]; then
    KEYWORDS=true
    shift
else
    KEYWORD=false
fi
#}}}
# The actual work.#{{{
print_info 0 "Starting to add files/folders recursively."
for i in ${@}; do
    svn_add_recursive "${i}" "2"
done
#}}}

#
####
