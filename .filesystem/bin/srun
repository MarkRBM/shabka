#!/usr/bin/env bash
#
# vim:ft=sh:fenc=UTF-8:ts=4:sts=4:sw=4:expandtab:foldmethod=marker:foldlevel=0:
#
# $Id: srun 783 2008-03-24 12:20:18Z wael $

if [ "${#}" -lt "1" ]; then
    echo -e "${FG_RED_B}Usage: ${0} [PROGRAM] [ARGS].${FG_CLEAR}"
    exit 1
fi
(xhost +server &) &> /dev/null
(xhost +nasreddine.com &) &> /dev/null
(xhost +192.168.2.2 &) &> /dev/null
(ssh -X -l wael 192.168.2.2 "DISPLAY=192.168.1.5:0 ${@}" &) &> /dev/null
