# Main {{{{

if [ ! -x bc ] && [ ! -x /usr/bin/bc ] && [ ! -x /bin/bc ]; then
    print_error "bc doesn't seem to be installed, Aborting."
    return 1
fi
capacity=" $( grep "design capacity:" /proc/acpi/battery/BAT1/info | sed -e "s@design capacity:.* \([0-9]*\) .*mAh@\1@g" )"
remaining=" $( grep "remaining capacity:" /proc/acpi/battery/BAT1/state | sed -e "s@remaining capacity:.* \([0-9]*\) .*mAh@\1@g" )"
percentage=" $( echo "$( echo ${remaining} ) * 100 / $( echo ${capacity} ) " | bc ) "
echo "Remaining Battery = ${percentage}%"

#}}}

#
####
