# Bootstrap{{{
bootstrap="`dirname $0`/.bootstrap"
if [ -f "${bootstrap}" ]; then
    source "${bootstrap}"
else
    echo "Cannot bootstrap"
    exit 54
fi
unset bootstrap
#}}}

print_info 0 "Beginning Auto import."


if [ -d "${HOME}/.etc" ]; then
    print_info 2 "Auto import in the folder ${HOME}/.etc"
    cd "${HOME}/.etc"
    for i in .ssh/known_hosts .kernels_config; do
        if [ -e "${i}" ]; then
            svn ci -m "Auto Import." "${i}" &> /dev/null
        fi
    done
fi

if [ -d "${HOME}/.etc.plus" ]; then
    print_info 2 "Auto import in the folder ${HOME}/.etc.plus"
    cd "${HOME}/.etc.plus"
    for i in .config/ .local/share/applications/ .todo .opensync-0.22; do
        if [ -e "${i}" ]; then
            svn ci -m "Auto Import." "${i}" &> /dev/null
        fi
    done
fi

if [ -d "${HOME}/.etc.server" ]; then
    print_info 2 "Auto import in the folder ${HOME}/.etc.server"
    cd "${HOME}/.etc.server"
    for i in .config/vlc/vlcrc; do
        if [ -e "${i}" ]; then
            svn ci -m "Auto Import." "${i}" &> /dev/null
        fi
    done
fi

if [ -d "${HOME}/.etc.gnome" ]; then
    print_info 2 "Auto import in the folder ${HOME}/.etc.gnome"
    cd "${HOME}/.etc.gnome"
    for i in .gnome2; do
        if [ -e "${i}" ]; then
            svn ci -m "Auto Import." "${i}" &> /dev/null
        fi
    done
fi

if [ -d "${HOME}/.etc.phoenix" ]; then
    print_info 2 "Auto import in the folder ${HOME}/.etc.phoenix"
    cd "${HOME}/.etc.phoenix"
    for i in .config/vlc/vlcrc .htoprc; do
        if [ -e "${i}" ]; then
            svn ci -m "Auto Import." "${i}" &> /dev/null
        fi
    done
fi

if [ -d "${HOME}/.amsn" ]; then
    print_info 2 "Auto import in the folder ${HOME}/.amsn"
    for i in ${HOME}/.amsn/*/logs/*; do
        if [ -d "${i}" -a "$(basename ${i})" != ".svn" ]; then
            svn add "${i}" &> /dev/null
            svn add "${i}"/* &> /dev/null
        fi
    done
    svn ci -m "Auto Import." "${HOME}/.amsn" &> /dev/null
fi

if [ -d "${HOME}/.purple" ]; then
    print_info 2 "Auto import in the folder ${HOME}/.purple"
    cd "${HOME}/.purple"
    sadd logs &> /dev/null
    sadd certificates &> /dev/null
    svn ci -m "Auto Import." "${HOME}/.purple" &> /dev/null
fi

if [ -d "${HOME}/.gconf" ]; then
    print_info 2 "Auto import in the folder ${HOME}/.gconf"
    cd "${HOME}/.gconf"
    sadd . &> /dev/null
    svn ci -m "Auto Import." "${HOME}/.gconf" &> /dev/null
fi

if [ -d "${HOME}/.mozilla" ]; then
    print_info 2 "Auto import in the folder ${HOME}/.mozilla"
    sadd firefox/eMxyzptlk/sxipper2 &> /dev/null
    svn ci -m "Auto Import." "${HOME}/.mozilla" &> /dev/null
fi

if [ -d "${HOME}/.opera" ]; then
    print_info 2 "Auto import in the folder ${HOME}/.opera"
    svn ci -m "Auto Import." "${HOME}/.opera" &> /dev/null
fi

if [ -d "${HOME}/.kde" ]; then
    print_info 2 "Auto import in the folder ${HOME}/.kde"
    cd "${HOME}/.kde"
    sadd share/apps/amarok/playlists &> /dev/null
    svn ci -m "Auto Import." "${HOME}/.kde" &> /dev/null
fi

if [ -d "${HOME}/.hide.etc.gnome" ]; then
    print_info 2 "Auto import in the folder ${HOME}/.hide.etc.gnome"
    cd "${HOME}/.hide.etc.gnome"
    for i in .gnome2; do
        if [ -e "${i}" ]; then
            svn ci -m "Auto Import." "${i}" &> /dev/null
        fi
    done
fi

if [ -d "${HOME}/.hide.etc.kde" ]; then
    print_info 2 "Auto import in the folder ${HOME}/.hide.etc.kde"
    cd "${HOME}/.hide.etc.kde"
    for i in .kde; do
        if [ -e "${i}" ]; then
            svn ci -m "Auto Import." "${i}" &> /dev/null
        fi
    done
fi

if [ -d "${HOME}/lib" ]; then
    print_info 2 "Auto import in the folder ${HOME}/lib"
    cd "${HOME}/lib"
    for i in azsmrc/config.cfg; do
        if [ -e "${i}" ]; then
            svn ci -m "Auto Import." "${i}" &> /dev/null
        fi
    done
fi

if [ -d "${HOME}/.hide.etc.plus" ]; then
    print_info 2 "Auto import in the folder ${HOME}/.hide.etc.plus"
    cd "${HOME}/.hide.etc.plus"
    # Backup the router first.
    if ping -c 1 router.nasreddine.info &> /dev/null; then
        scp "router:/conf/config.xml" "${HOME}/.hide.etc.plus/.router_config/router.nasreddine.info.xml" > /dev/null
    fi
    for i in .abook/addressbook .gnupg/{pubring.gpg,secring.gpg,trustdb.gpg} .pwsafe.dat .router_config .config/MusicBrainz/Picard.conf .opensync-0.22; do
        if [ -e "${i}" ]; then
            svn ci -m "Auto Import." "${i}" &> /dev/null
        fi
    done
fi

if [ -d "${HOME}/.hide.server" ]; then
    print_info 2 "Auto import in the folder ${HOME}/.hide.server"
    cd "${HOME}/.hide.server"
    for i in .hammie.db .procmail/msgid.cache .spamassassin/{auto-whitelist,bayes_seen,bayes_toks}; do
        if [ -e "${i}" ]; then
            svn ci -m "Auto Import." "${i}" &> /dev/null
        fi
    done
fi
