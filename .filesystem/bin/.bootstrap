####
# Determine the location of the functions file and source it.
####

DIRS=(
  ${HOME}/bin/functions/scripts ${HOME}/lib/functions/scripts
  ${HOME}/lib/bash/functions/scripts ${HOME}/.filesystem/lib/bash/functions/scripts
  $(dirname "${0}")/functions/scripts $(dirname "${0}")/../bin/functions/scripts
  $(dirname "${0}")/../lib/functions/scripts $(dirname "${0}")/../lib/bash/functions/scripts
  ./functions/scripts ./scripts
)

# Export my local bin directory
# export it at first, so it will be checked first!
if ! echo $PATH | grep -q "${HOME}/.filesystem/bin"; then
  export PATH="${HOME}/.filesystem/bin:${HOME}/.filesystem/usr/bin:${PATH}"
fi

result=1
for file in ${DIRS[@]}; do
  if [ -f "${file}" ]; then
    source "${file}"
    result=0
    break
  fi
done

if [ "${result}" -gt 0 ]; then
  echo "The required functions file could not be found, Aborting..."
  exit 54
fi

unset file DIRS result
