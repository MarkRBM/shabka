# Bootstrap{{{
bootstrap="`dirname $0`/.bootstrap"
if [ -f "${bootstrap}" ]; then
    source "${bootstrap}"
else
    echo "Cannot bootstrap"
    exit 54
fi
unset bootstrap
#}}}

HAMMIEDB="${HOME}/.hammie.db"
HAMFOLDER="${HOME}/.mail/.Spam.Ham"
SPAMFOLDER="${HOME}/.mail/.Spam.Missed"

# Determine which spam protection is in use.
UsedProgram="$(clean_comments "${HOME}/.procmailrc" | grep "rc\.spam" | sed -e "s@.*rc\.@@g")"

print_info 0 "Training spamDB."

case "${UsedProgram}" in
    "spambayes")
        print_info 2 "Spambayes detected."
        sb_mboxtrain.py -q -r -n -d "${HAMMIEDB}" -g "${HAMFOLDER}" -s "${SPAMFOLDER}"
        ;;
    "spamassassin")
        print_info 2 "Spamassassin detected."
        for i in cur new; do
            sa-learn --spam "${SPAMFOLDER}/${i}"
            rm -f "${SPAMFOLDER}/${i}"/*
            sa-learn --ham "${HAMFOLDER}/${i}"
            rm -f "${HAMFOLDER}/${i}"/*
        done
        ;;
    *)
        print_error 0 "I couldn't detect which program is in use, aborting..."
        exit 1
        ;;
esac
