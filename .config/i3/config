## Scratchpad support

# Move IRC to scratchpad
for_window [class="^Termite" title="^irc"] sticky enable
for_window [class="^Termite" title="^irc"] move scratchpad

# Move vit to scratchpad
for_window [class="^Termite" title="^vit"] sticky enable
for_window [class="^Termite" title="^vit"] move scratchpad

# Move Whatsapp to scratchpad
for_window [class="^whats-app-nativefier*"] sticky enable
for_window [class="^whats-app-nativefier*"] move scratchpad

# Move Pulse to the scratchpad
for_window [class="Chromium" instance="crx_jjbjdleccaiklfpcblgekgmjadjdclkp"] sticky enable
for_window [class="Chromium" instance="crx_jjbjdleccaiklfpcblgekgmjadjdclkp"] move scratchpad

# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad

# Make the currently focused window a scratchpad
bindsym $mod+minus scratchpad show

# Show Whatsapp scratchpad
bindsym $alt+w [class="^whats-app-nativefier*"] scratchpad show

# IRC scatchpad
bindsym $alt+i [class="^Termite" title="^irc"] scratchpad show

# Vit scatchpad
bindsym $alt+v [class="^Termite" title="^vit"] scratchpad show

bindsym $alt+p [class="Chromium" instance="crx_jjbjdleccaiklfpcblgekgmjadjdclkp"] scratchpad show

# finally, start a terminal in the personal workspace and all expected scratchpads
exec termite --title=irc --exec="tmx -L irc irc"
exec termite --title=vit --exec="vit"
exec whatsapp-web-desktop
exec i3-msg "workspace personal; exec --no-startup-id /usr/bin/termite"
