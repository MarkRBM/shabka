# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4
set $alt Mod1

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
# font pango:monospace 8

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
font pango:DejaVu Sans Mono 8

# Colors
# class                 border  backgr. text    indicator
client.focused          #00FF00 #00FF00 #000000 #2e9ef4

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# focus should not follow the mouse pointer
focus_follows_mouse no

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
bindsym $mod+d exec --no-startup-id dmenu_run
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
# bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

# change focus
bindsym $mod+n focus left
bindsym $mod+e focus down
bindsym $mod+i focus up
bindsym $mod+o focus right

# move focused window
bindsym $mod+Shift+n move left
bindsym $mod+Shift+e move down
bindsym $mod+Shift+i move up
bindsym $mod+Shift+o move right

# move workspaces between monitors
bindsym $mod+$alt+o move workspace to output right
bindsym $mod+$alt+n move workspace to output left

# split in horizontal orientation
# bindsym $mod+minus split h

# split in vertical orientation
# bindsym $mod+bar split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+l layout stacking
bindsym $mod+u layout tabbed
bindsym $mod+y layout toggle split

# toggle tiling / floating
#bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
#bindsym $mod+space focus mode_toggle

# focus the parent container
# bindsym $mod+a focus parent

# focus the urgent window
bindsym $mod+x [urgent=latest] focus

# focus the child container
#bindsym $mod+d focus child

# dynamic workspaces
bindsym $mod+space exec --no-startup-id "i3-dynamic-workspaces --switch-workspace"
bindsym $mod+Shift+space exec --no-startup-id "i3-dynamic-workspaces --move-container-to-workspace"
bindsym $mod+Shift+w exec i3-input -F 'rename workspace to %s' -P 'New name: '

# switch between the current and the previously focused one
bindsym $mod+b workspace back_and_forth
bindsym $mod+Shift+b move container to workspace back_and_forth
bindsym $mod+Tab workspace back_and_forth

# https://github.com/tybitsfox/i3msg/blob/master/.i3/config
# mark current window
bindsym $mod+m exec i3-input -F 'mark %s' -l 1 -P 'Mark: '

# goto mark
bindsym $mod+apostrophe exec i3-input -F '[con_mark="%s"] focus' -l 1 -P 'Go to: '

# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the first scratchpad window
bindsym $mod+minus scratchpad show

# reload the configuration file
bindsym $mod+Shift+c reload; exec --no-startup-id "notify-send 'i3 configuration reloaded'"
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart; exec --no-startup-id "notify-send 'i3 restarted'"
# exit i3 (logs you out of your X session)
bindsym $mod+$alt+x exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# volume support
bindsym XF86AudioRaiseVolume exec --no-startup-id "pactl set-sink-mute 0 false; pactl set-sink-volume 0 +5%"
bindsym XF86AudioLowerVolume exec --no-startup-id "pactl set-sink-mute 0 false; pactl set-sink-volume 0 -5%"
bindsym XF86AudioMute exec --no-startup-id "pactl set-sink-mute 0 toggle"

# brightness support
bindsym XF86MonBrightnessUp exec --no-startup-id "xbacklight -inc 5
bindsym XF86MonBrightnessDown exec --no-startup-id "xbacklight -dec 5

# Applications
set $mode_apps Launch: Chromium (p)ersonal, Chromium p(u)blica, c(h)arles, (s)lack
mode "$mode_apps" {
  bindsym p exec relay-browser --profile personal, mode "default"
  bindsym u exec relay-browser --profile publica, mode "default"
  bindsym h exec charles, mode "default"
  bindsym s exec slack, mode "default"

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+a mode "$mode_apps"

# resize window (you can also use the mouse for that)
mode "resize" {
  # These bindings trigger as soon as you enter the resize mode

  # Pressing left will shrink the window’s width.
  # Pressing right will grow the window’s width.
  # Pressing up will shrink the window’s height.
  # Pressing down will grow the window’s height.
  bindsym n resize shrink width 10 px or 10 ppt
  bindsym e resize shrink height 10 px or 10 ppt
  bindsym i resize grow height 10 px or 10 ppt
  bindsym o resize grow width 10 px or 10 ppt

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

## Manual management of external displays
# Set the shortcuts and what they do
set $mode_display Single Screen (s), Multiple screen (m)
mode "$mode_display" {
  bindsym m exec --no-startup-id xrandr --output eDP1 --mode 1920x1080 --output DP1 --auto --right-of eDP1 && xset r rate 200 30, mode "default"
  bindsym s exec --no-startup-id xrandr --output eDP1 --mode 1920x1080 --output DP1 --off && xset r rate 200 30, mode "default"

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+s mode "$mode_display"

## Management of Proxy
set $mode_proxy Charles Proxy(c), Direct (d)
mode "$mode_proxy" {
  bindsym d exec --no-startup-id ln -sf /home/kalbasit/.dotfiles/.proxy-direct.pac /home/kalbasit/.proxy.pac && notify-send 'Charles proxy disabled', mode "default"
  bindsym c exec --no-startup-id ln -sf /home/kalbasit/.dotfiles/.proxy-charles.pac /home/kalbasit/.proxy.pac && notify-send 'Charles proxy enabled', mode "default"

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+p mode "$mode_proxy"

## Management of keyboard layout
# Set the shortcuts and what they do
set $mode_keyboard Qwerty (q), Colemak (c)
mode "$mode_keyboard" {
  bindsym q exec --no-startup-id setxkbmap us && xmodmap ~/.Xmodmap && notify-send 'keyboard switch to Qwerty', mode "default"
  bindsym c exec --no-startup-id setxkbmap us -variant colemak && xmodmap ~/.Xmodmap && notify-send 'keyboard switch to Colemak', mode "default"

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+k mode "$mode_keyboard"

## Management of power
set $locker i3lock && sleep 1
set $mode_power System: (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_power" {
  bindsym l exec --no-startup-id $locker, mode "default"
  bindsym e exec --no-startup-id i3-msg exit, mode "default"
  bindsym s exec --no-startup-id $locker && systemctl suspend, mode "default"
  bindsym h exec --no-startup-id $locker && systemctl hibernate, mode "default"
  bindsym r exec --no-startup-id systemctl reboot, mode "default"
  bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+$alt+p mode "$mode_power"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  # put the bar on the top
  position top
  # use i3status for the bar
  status_command i3status
  # disable clicking on workspace buttons
  bindsym button1 nop

  # setup colors
  colors {
    background #3a3a3a
    statusline #d0d0d0
    separator  #4e4e4e
  }
}

# application assignment
assign [class="^Slack$"] slack
assign [class="^com-xk72-charles-gui-.*$"] charles

# assign important to my external monitor
workspace main output DP1
workspace personal output DP1
workspace publica output DP1
workspace slack output DP1

# finally, start a terminal and chrome in the `main` workspace
exec i3-msg "workspace main; exec --no-startup-id /usr/bin/termite; exec --no-startup-id relay-browser --profile publica"
