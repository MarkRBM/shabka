# Weather info
if which weatherget &> /dev/null; then
    case "${HOSTNAME}" in
        *.nasreddine.info)
            alias outside="weatherget -s FRXX0114 -m"
        ;;
        *)
            alias outside="print_error 0 \"Unknown hostname, couldn't determine yout current location.\""
        ;;
    esac
fi

