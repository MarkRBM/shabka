# usefull listing
alias ls="$(${W} ls 2> /dev/null) \$LS_OPTIONS"
alias ll='ls -ahl | more; echo -e "${FG_GREEN_B} --[${FG_BLUE_B} Dirs:${FG_CYAN_B} `ls -al | egrep \"^drw\" | wc -l` ${FG_GREEN_B}|${FG_MAGNETA_B} Files: ${FG_RED_B}`ls -al | egrep -v \"^drw\" | grep -v total | wc -l` ${FG_GREEN_B}]--"'
alias la='ls -ahl'
alias lgrep='ls -al | grep'
alias lad='ls -d .*(/)'                 # only show dot-directories
alias laa='ls -a .*(.)'                 # only show dot-files
alias lsd='ls -d *(/)'                  # only show directories
alias lse='ls -d *(/^F)'                # only show empty directories
alias lss='ls -l *(s,S,t)'              # only files with setgid/setuid/sticky flag
alias lsl='ls -l *(@)'                  # only symlinks
alias lsx='ls -l *(*)'                  # only executables
alias lsw='ls -ld *(R,W,X.^ND/)'        # world-{readable,writable,executable} files
alias lsnew='ls -rl *(D.om)'            # display the newest files
alias lsold='ls -rtlh *(D.om)'          # display the oldest files
alias lsbig='ls -flh *(.OL)'            # display the biggest files
alias lssmall='ls -Srl *(.oL)'          # display the smallest files

# Don't let VÐ†M launch in compatible mode.
if which vim &> /dev/null; then
    alias vi='vim'
fi

# Always use colors with grep
alias grep='grep --color=auto'

# zmv
alias zcp='zmv -C'
alias zln='zmv -L'

# Make sure we're safe.
alias cp='cp -b'
alias rm='rm -I --interactive=once'

# Darcs aliases
if [ -x "$(${W} darcs 2> /dev/null)" ]; then
    alias re='darcs record -m'
    alias rea='darcs record -am'
    alias ws='darcs w -s'
    alias wls='darcs w -ls'
    alias di='darcs diff -u'
    alias pa='darcs push -a'
fi

# Svn aliases
if [ -x "$(${W} svn 2> /dev/null)" ]; then
    alias sst="svn st | grep -v '^\(?\|X\|Performing\)' | sed -e '/^$/d'"
    alias sstw="svn st | grep --color=never '?'"
    alias sci='svn ci -m'
    alias sco='svn co --ignore-externals'
    alias scoe='svn co'
    alias supie='svn update --ignore-externals'
    alias supe='svn update'
    alias supf='svn update; svnfix'
    alias sdi='svn diff'
    alias slog='svn log'
fi

# Bazaar aliases
if [ -x "$(${W} bzr 2> /dev/null)" ]; then
    alias bst='bzr st'
    alias bci='bzr ci -m'
    alias bco='bzr branch'
    alias bup='bzr pull'
    alias bdi='bzr diff'
    alias blog='bzr log'
    alias bslog='blog -r -10..'
    alias bp='bzr push'
fi

# Emerge aliases
if [ -x "$(${W} emerge 2> /dev/null)" ]; then
    if [ -x "$(${W} sudo 2> /dev/null)" ]; then
        alias emerge='sudo emerge'
    fi
    alias i='emerge -av --keep-going'
    alias ip='emerge -vp'
    alias iu='emerge -auvDN --keep-going world'
    alias re='emerge -C'
    alias ru='emerge --depclean'
    if [ -x "$(${W} eix 2> /dev/null)" ]; then
        alias s='eix'
    else
        alias s='emerge -s'
    fi
    Sync_Command="emerge --sync"
    if [ -x "$(${W} layman 2> /dev/null)" -a -x "$(${W} sudo 2> /dev/null)" ]; then
        Sync_Command="${Sync_Command}; sudo layman -S"
        if [ -x "$(${W} eix 2> /dev/null)" ]; then
            Sync_Command="${Sync_Command}; sudo update-eix; sudo update-eix-remote update"
        fi
    fi
    alias S="${Sync_Command}"
    alias Su='S && iu'
fi

# Paludis aliases
if [ -x "$(${W} paludis 2> /dev/null)" ]; then
    unset PALUDIS_CMD
    if [ -x "$(${W} _paludis_wrapper.bash 2> /dev/null)" ]; then
        PALUDIS_CMD='/usr/bin/_paludis_wrapper.bash'
    else
        PALUDIS_CMD='/usr/bin/paludis'
    fi
    if [ -x "$(${W} sudo 2> /dev/null)" ]; then
        PALUDIS_CMD="sudo ${PALUDIS_CMD}"
    fi
    PaludisOptions="--log-level warning --continue-on-failure if-satisfied --dl-reinstall if-use-changed --show-use-descriptions all --show-package-descriptions all"
    alias paludis="${PALUDIS_CMD} ${PaludisOptions} --dl-upgrade as-needed"
    alias paludisworld="${PALUDIS_CMD} -i ${PaludisOptions} --dl-upgrade always world"
    alias paludiseverything="${PALUDIS_CMD} -i ${PaludisOptions} --dl-upgrade always everything"
    unset PALUDIS_CMD PaludisOptions
    alias i='paludis -i --ask'
    alias ip='paludis -ip'
    alias iu='paludiseverything --ask'
    alias re='paludis -u'
    alias ru='paludis --uninstall-unused'
    if [ -x "/usr/bin/eix" ]; then
        alias s='eix'
    else
        alias s='paludis -s'
    fi
    alias S='paludis --sync'
    alias Su='S && iu'
fi

# Pacman
if [ -x "$(${W} pacman 2> /dev/null)" ]; then
    if [ -x "$(${W} clyde)" ]; then
        alias pacman='sudo clyde'
    elif [ -x "$(${W} tupac 2> /dev/null)" ]; then
        alias pacman='tupac'
    elif [ -x "$(${W} yaourt 2> /dev/null)" ]; then
        alias pacman='yaourt'
    elif [ -x "$(${W} sudo 2> /dev/null)" ]; then
        alias pacman='sudo pacman'
    fi
    alias i='pacman -S --needed'
    alias ip='yes "n" | pacman -S'
    alias iu='pacman -Su'
    alias re='pacman -R'
    alias ru='pacman -cs'
    alias s='pacman -Ss'
    alias S='pacman -Sy'
    alias Su='S && iu'
fi

# apt-get
if [ -x "$(${W} apt-get 2> /dev/null)" ]; then
    if [ -x "$(${W} sudo 2> /dev/null)" ]; then
        alias apt-get='sudo apt-get'
    else
        alias apt-get='apt-get'
    fi
    alias i='apt-get install'
    alias ip='apt-get install -s'
    alias iu='apt-get dist-upgrade'
    alias re='apt-get remove'
    alias ru='apt-get autoremove'
    alias s='apt-cache search'
    alias S='apt-get update'
    alias Su='S && iu'
fi

