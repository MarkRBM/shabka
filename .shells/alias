# Wine32 on Freebsd64
if [ -x /compat/i386/usr/local/bin/winecfg ]; then
    alias winecfg="LD_32_LIBRARY_PATH=/compat/i386/usr/local/lib PATH=/compat/i386/usr/local/bin:$PATH /compat/i386/usr/local/bin/winecfg"
    alias wine32="LD_32_LIBRARY_PATH=/compat/i386/usr/local/lib PATH=/compat/i386/usr/local/bin:$PATH /compat/i386/usr/local/bin/wine"
fi

alias playIphone='sudo rm /var/lib/mpd/playlists/iPhone.m3u; sudo touch /var/lib/mpd/playlists/iPhone.m3u; sudo chown wael:wael /var/lib/mpd/playlists/iPhone.m3u; for i in /mnt/storage/wael/Files/Downloads/iPhone\ Music/*; do readlink -f "$i" | sed -e "s@.*/\(Mp3z/.*\)@\1@g" >> /var/lib/mpd/playlists/iPhone.m3u; done; sudo chown mpd:mpd /var/lib/mpd/playlists/iPhone.m3u'

