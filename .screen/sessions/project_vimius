# SESSION NAME=Vimius Project

# Change to the project's folder
  chdir $HOME/Code/TechnoGate/vimius/ruby

# Source the config file
  source $HOME/.screen/config

# Overwrite default escape
  escape ^zz

# Overwrite default shell.
  shell -$SHELL

# Status bar
  caption always "%{=bu kb} %=< %?%-Lw%?%{kc}[:%n %t:]%{kb}%?%+Lw%? >%= "
  hardstatus alwayslastline "%{+b bw}[%H :: $USER]%{=b kw} %=%{=b bw}[%m.%d.%y %0C%a]"

  # Apps
  bind G screen -t Guard  0   bundle exec guard
  bind P screen -t Pry    1   bundle exec pry -I./lib -r./lib/vimius

# Default Buffers
#               <Title>         <Screen Number>     <Command>
  screen    -t  Guard           0                   bundle exec guard
  screen    -t  Pry             1                   bundle exec pry -I./lib -r./lib/vimius
  screen    -t  Shell           2
  screen    -t  Shell           3
  screen    -t  Shell           4
  select 2
