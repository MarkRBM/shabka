# vim:ft=zsh:
#

# Usage: alias_function new_name old_name
# Credit: http://mivok.net/2009/09/20/bashfunctionoverrist.html
alias_function() {
  if [[ "${1}" = "-h" ]] || [[ "${1}" = "--help" ]]; then
    echo "Usage: alias_function new_name old_name"
    return 0
  fi
  local ORIG_FUNC=$(declare -f $2)
  local NEWNAME_FUNC="$1${ORIG_FUNC#$2}"
  eval "$NEWNAME_FUNC"
}
