set $mod Mod4
set $alt Mod1

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below. ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, if you need a lot of unicode glyphs or
# right-to-left text rendering, you should instead use pango for rendering and
# chose a FreeType font, such as:
# font pango:DejaVu Sans Mono 10

# Colors
# class                 border  backgr. text    indicator
client.focused          #00FF00 #00FF00 #000000 #2e9ef4

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+t exec i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+c kill

# start dmenu (a program launcher)
bindsym $mod+d exec dmenu_run
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
# bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $alt+h split h

# split in vertical orientation
bindsym $alt+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# switch to workspace
bindsym $mod+0 workspace ssh
bindsym $mod+1 workspace term
bindsym $mod+2 workspace web
bindsym $mod+3 workspace editor

# move focused container to workspace
bindsym $mod+Shift+0 move container to workspace ssh
bindsym $mod+Shift+1 move container to workspace term
bindsym $mod+Shift+2 move container to workspace web
bindsym $mod+Shift+3 move container to workspace editor

# Toggle workspace between monitors
bindsym $mod+x move workspace to output right

# reload the configuration file
bindsym $mod+r reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+q exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# lock screen
bindsym $mod+Shift+z exec --no-startup-id "i3-msg 'workspace lockscreen'; lock_screen; i3-msg 'workspace back_and_forth'"

# switch between the current and the previously focused one
bindsym $mod+b workspace back_and_forth
bindsym $mod+Shift+b move container to workspace back_and_forth
bindsym $alt+Tab workspace back_and_forth

# Set the keys for lower/raise volume
bindsym XF86AudioRaiseVolume exec --no-startup-id volumectl up && killall -SIGUSR1 i3status
bindsym XF86AudioLowerVolume exec --no-startup-id volumectl down && killall -SIGUSR1 i3status
bindsym XF86AudioMute exec --no-startup-id volumectl toggle && killall -SIGUSR1 i3status

# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the first scratchpad window
bindsym $mod+minus scratchpad show

# mail client scratchpad
bindsym $alt+Shift+m exec $HOME/.filesystem/bin/named-emacs-frame mail-scratchpad mail
bindsym $alt+m [instance="^mail-scratchpad$"] scratchpad show

# chat client scratchpad
bindsym $alt+Shift+c exec urxvt -name chat-scratchpad -e zsh -i -c 'screen -c ~/.screen/sessions/irssi'
bindsym $alt+c [instance="^chat-scratchpad$"] scratchpad show

# radio scratchpad
bindsym $alt+Shift+r exec urxvt -name radio -e zsh -i -c 'pianobar'
bindsym $alt+r [instance="^radio$"] scratchpad show

# Start chrome
bindsym $mod+$alt+b exec x-www-browser

# Start a project
bindsym $mod+p exec --no-startup-id i3-corpdb-project

# https://github.com/tybitsfox/i3msg/blob/master/.i3/config
# mark current window
bindsym $mod+m exec i3-input -F 'mark %s' -l 1 -P 'Mark: '

# goto mark
bindsym $mod+apostrophe exec i3-input -F '[con_mark="%s"] focus' -l 1 -P 'Go to: '

# resize window (you can also use the mouse for that)
mode "resize" {
  # These bindings trigger as soon as you enter the resize mode

  # Pressing left will shrink the window’s width.
  # Pressing right will grow the window’s width.
  # Pressing up will shrink the window’s height.
  # Pressing down will grow the window’s height.
  bindsym h resize shrink width 10 px or 10 ppt
  bindsym j resize grow height 10 px or 10 ppt
  bindsym k resize shrink height 10 px or 10 ppt
  bindsym l resize grow width 10 px or 10 ppt

  # same bindings, but for the arrow keys
  bindsym Left resize shrink width 10 px or 10 ppt
  bindsym Down resize grow height 10 px or 10 ppt
  bindsym Up resize shrink height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+$alt+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  status_command myi3status
}

# Assign applications to workspaces
assign [class="^URxvt$" instance="^main$"] → term
assign [class="^X-www-browser$"] → web
assign [class="^Emacs24$" instance="^mail$"] → mail
assign [class="^URxvt$" instance="^chat$"] → chat
assign [class="^URxvt$" instance="^ovpn$"] → vpn

# automove to scratchpad
for_window [instance="^mail-scratchpad$"] move scratchpad
for_window [instance="^chat-scratchpad$"] move scratchpad
for_window [instance="^radio$"] move scratchpad

# i3-dynamic-workspaces
bindsym $mod+Return exec "i3-dynamic-workspaces --switch-workspace"
bindsym $mod+Shift+Return exec "i3-dynamic-workspaces --add-workspace"

# vpn
bindsym $mod+Shift+v exec "i3-msg 'workspace vpn'; urxvt -name ovpn -e zsh -i -c 'ovpn -g'"

# otp
bindsym $mod+Shift+o exec "fetchotp -x"

# autostart
exec --no-startup-id ~/.filesystem/bin/Gwall
exec urxvt -name main
exec --no-startup-id nm-applet

# Open Pianobar in a scratchpad
exec urxvt -name radio -e zsh -i -c 'pianobar'
